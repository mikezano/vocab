    {
        Words = await Http.GetFromJsonAsync<List<BasicWord>>("sample-data/spanish.json");

        AppState.SetWords(Words.ToList());
        CardDatas = AppState.GetCardDataSet();
        Console.WriteLine("OnInitializedAsync " + CardDatas.Count.ToString());
    }


