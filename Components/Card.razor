@inject IJSRuntime JS

<div class="card border-0 m-3 @ActiveAnimationClasses" @ref="_cardRef">
    <div class="card-body p-0" >
        <div class="front">
            <h1 class="border-bottom border-danger word">@MultipleChoices.Word</h1>
            <div class="mt-3 choices">
                @foreach (var choice in MultipleChoices.Choices)
                {
                    var id = MultipleChoices.Word + "_" + choice;                  
                    <label class="m-0 px-4 d-flex align-items-center choice gap-2" for="@id">
                        <input type="radio"
                                name="@MultipleChoices.Word"
                                value="@choice"
                                id="@id"
                                @onchange="Guess" />
                        <span>@choice</span>
                    </label>
                }
            </div>
        </div>
        <div class="back d-flex align-items-center justify-content-center">
            <h2>@MultipleChoices.Answer</h2>
        </div>
    </div>
</div>

